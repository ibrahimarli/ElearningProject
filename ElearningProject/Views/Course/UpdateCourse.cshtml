@model ElearningProject.DAL.Entities.Course
@{
    ViewBag.Title = "UpdateCourse";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h2 style="color:seagreen">~Kurs Güncelleme Paneli~</h2>
                <form method="post">
                    @Html.HiddenFor(x => x.CourseId)

                    <label>Kurs Ad</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    <br /><br />
                    <label>Kurs Fiyat</label>
                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                    <br /><br />
                    <label>Kurs Süresi</label>
                    @Html.TextBoxFor(x => x.Duration, new { @class = "form-control" })
                    <br /><br />
                    <label>Görsel Seçiniz</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    <br /><br />
                    <label>Kategori Seçiniz</label>
                    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.j, new { @class = "form-control" })
                    <br /><br />
                    <label>Eğitmen Seçiniz</label>
                    @Html.DropDownListFor(x => x.InstructorId, (List<SelectListItem>)ViewBag.z, new { @class = "form-control" })
                    <br /><br />

                    <button class="btn btn-success">KURS GÜNCELLE</button>
                </form>
            </div>
        </div>
    </div>
</div>

