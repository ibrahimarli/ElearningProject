@model ElearningProject.DAL.Entities.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h2 style="color:seagreen">~Referans Güncelleme~</h2>
                <br />
                <form method="post">
                    <label>Referans ID</label>
                    @Html.TextBoxFor(x => x.TestimonialId, new { @class = "form-control" })
                    <br />
                    <br />
                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                    <br />
                    <br />
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    <br />
                    <br />
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    <br />
                    <br />
                    @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
                    <br />
                    <br />
                    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
                    <br />
                    <br />
                    <button class="btn btn-primary">Referansı Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>



