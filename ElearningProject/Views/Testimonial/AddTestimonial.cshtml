@model ElearningProject.DAL.Entities.Testimonial
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h2 style="color:seagreen">~Referans Ekleme Paneli~</h2>
                <form method="post">
                    <label>Referans Ad Soyad</label>
                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                    <br />
                    <br />
                    <label>Referans Ünvan</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    <br />
                    <br />
                    <label>Referans Resim</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    <br />
                    <br />
                    <label>Referans Yorumu</label>
                    @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
                    <br />
                    <br />
                    <label>Referans Durum</label>
                    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
                    
                    <br />
                    <br />
                    <button class="btn-primary">REFERANS EKLE</button>
                </form>
            </div>
        </div>
    </div>
</div>

